<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <change-notes>Add change notes here.&lt;br&gt;
      &lt;em&gt;most HTML tags may be used&lt;/em&gt;</change-notes>
  <idea-version since-build="212.5712" until-build="212.*" />
  <id>com.github.study.BulletIdeaPlugin</id>
  <name>BulletIdeaPlugin</name>
  <vendor email="zlove.zhang@bytedance.com" url="">ByteDance</vendor>
  <description><![CDATA[This is a plugin study demo.<br>
    <em>This is a plugin study demo</em>]]></description>
  <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
  <actions>
    <!-- Add your actions here -->
    <!-- 创建了一个ActionGroup -->
    <group id="PluginStudy.TopMenu" text="Study Plugin" description="Demo Plugin in top menu">
      <!-- 注册HelloWorld Action -->
      <action class="com.github.study.plugin.action.HelloWorldAction" id="DemoAction" text="Hello World Action" description="This is a test action">
        <!-- 设置 HelloWorld Action 的键盘快捷键-->
        <keyboard-shortcut first-keystroke="control alt p" keymap="$default" />
        <!-- 将HelloWorld Action添加到剪切拷贝组中 -->
        <add-to-group group-id="CutCopyPasteGroup" anchor="last" />
      </action>
      <!-- 将这个Group添加到主菜单 -->
      <add-to-group group-id="MainMenu" anchor="last" />
    </group>
  </actions>
</idea-plugin>
